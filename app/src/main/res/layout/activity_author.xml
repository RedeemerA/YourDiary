<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".page.author.AuthorActivity">

    <TextView
        android:id="@+id/tv_author_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="返回"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"/>

    <LinearLayout
        android:id="@+id/ll_author_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:layout_marginTop="100dp">

        <TextView
            android:id="@+id/tv_author_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="日记作者："
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_weight="1"/>
        <EditText
            android:id="@+id/et_author_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="请在此处输入日记作者姓名"
            android:maxLines="1"
            android:textSize="20sp"
            android:maxLength="10"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_author_year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ll_author_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_author_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="生日年份："
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_weight="1"/>
        <EditText
            android:id="@+id/et_author_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="请在此处输入作者生年"
            android:maxLines="1"
            android:inputType="number"
            android:textSize="20sp"
            android:maxLength="10"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_author_month"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ll_author_year"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_author_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="生日月份："
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_weight="1"/>
        <EditText
            android:id="@+id/et_author_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="请在此处输入作者生月"
            android:maxLines="1"
            android:inputType="number"
            android:textSize="20sp"
            android:maxLength="10"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_author_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ll_author_month"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_author_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="生日日期："
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_weight="1"/>
        <EditText
            android:id="@+id/et_author_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="请在此处输入作者生日"
            android:maxLines="1"
            android:inputType="number"
            android:textSize="20sp"
            android:maxLength="10"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_author_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ll_author_day"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="保存"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:background="@color/black"
        android:layout_marginTop="10dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:paddingStart="13dp"
        android:paddingEnd="13dp"/>




</androidx.constraintlayout.widget.ConstraintLayout>